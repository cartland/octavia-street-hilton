<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Set AppCompat’s actionBarStyle -->
        <item name="actionBarStyle">@style/MyActionBarStyle</item>

        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="MyActionBarStyle">styles</style>

    <color name="color_primary">#3399ff</color>
    <color name="color_primary_dark">#3366cc</color>
    <color name="color_accent">#ffcc0064</color>

    <color name="fab_pressed">#ff660032</color>
    <color name="fab_ripple">#333399</color>

    <color name="color_background">#FFFFFF</color>

    <color name="drawer_background">#556688</color>
    <color name="text_color">#fff</color>

</resources>
